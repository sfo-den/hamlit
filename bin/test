#!/bin/bash

VERSIONS=(
  2.1.7
  2.2.3
  2.3.0
)

set -e
trap 'echo "${VERSIONS[2]}" > .ruby-version' 0

function test_with() {
  version=$1
  rbenv local $version
  if ! bundle check > /dev/null; then
    bundle install
  fi
  ruby -v
  bundle exec rake test
}

for version in ${VERSIONS[@]}; do
  test_with $version
done
